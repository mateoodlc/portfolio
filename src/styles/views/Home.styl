// Home

@import "~styles/vars";

.Home
    display block
    width 100%

input
    background-color white
    color $black
    lost-column 1 / 2
    +mobile()
        color $white
        lost-column 1 / 1

.see-more--vertical-line
    content ''
    position absolute
    display block
    width 2px
    height 10px
    background black
.see-more--horizontal-line
    content ''
    position absolute
    display block
    width 10px
    height 2px
    background black

.works--container
    position relative
    display flex
    width 100%
    height 100vh


