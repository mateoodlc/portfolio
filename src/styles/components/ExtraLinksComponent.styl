// ExtraLinksComponent

@import "~styles/vars";

.ExtraLinksComponent
    display flex
    justify-content flex-start
    align-content flex-end
    position fixed
    flex-direction row
    flex-wrap wrap-reverse
    bottom 0
    z-index 10
    width 100%
    cursor pointer
    pointer-events none
    height 100px
    a
        text-decoration none
        color white

.contactCurtain
    left 20%
    +below(800px)
        left 50%

.contact-btn
    position relative
    display inline-flex
    justify-content center
    align-content center
    width 20%
    background white
    color black
    height 70%
    pointer-events auto
    +below(800px)
        width 50%
    .contact-line1
        content ''
        display block
        position absolute
        width 10px
        height 1px
        top 60%
        left 50%
        background black
        z-index 12
    .contact-line2
        content ''
        display block
        position absolute
        width 10px
        height 1px
        left 51.5%
        top 60%
        background black
        z-index 12

.about-btn
    display inline-flex
    justify-content center
    align-content center
    width 20%
    background black
    height 70%
    position relative
    pointer-events auto
    +mobile(800px)
        width 50%
    .about-line1
        content ''
        display block
        position absolute
        width 10px
        height 1px
        top 60%
        left 50%
        background white
        z-index 12
    .about-line2
        content ''
        display block
        position absolute
        width 10px
        height 1px
        left 51.4%
        top 60%
        background white
        z-index 12



