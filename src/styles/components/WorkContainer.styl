// WorkContainer

@import "~styles/vars";

.WorkContainer
    display flex
    position relative
    min-height 300px
    justify-content center
    align-items center
    overflow hidden
    lost-column 4/12 0 0
    height 100vh
    pointer-events auto
    cursor none
    +below(800px)
        lost-column 6/6
    // &:hover
    //     .work-container--hover
    //         transition background 0.4s linear, box-shadow 0.7s
    //         z-index 0
    //         background white
    //         animation ripple 0.3s linear forwards

.work-container--middle-line
    display block
    position absolute
    content ''
    background white
    height 70%
    width 1px
    z-index 0
    opacity 0.2

.work-container--hover
    display block
    position absolute
    align-self center
    width 100px
    height 100px
    border-radius 100%
    +below(800px)
        width 150%
        height 150%

.work-module
    display flex
    position relative
    justify-content center
    align-items center
    width 70%
    max-width 500px
    min-height 200px
    max-height 500px
    border-radius 15%
    background white
    color white
    z-index 1
    transition background 0.4s linear, box-shadow 0.7s
    .project-title
        text-align center
    +below(800px)
        width 100% !important
        height 100% !important
        max-width 800px
        max-height 100vh
    h2
        color white
        font-size 30px
        +below(800px)
            top 87%

.mockup
    position absolute
    display block
    top 5%
    width 100%
    max-width 620px
    z-index 1000
    +below(800px)
        top 15%
        width 120%
        min-width unset

.project-logo
    position absolute
    display block
    width 30% !important
    top 55%
    z-index 1000
