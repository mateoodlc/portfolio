// ContactComponent

@import "~styles/vars";

.ContactComponent
    display block
    cursor default

.mail
    display block

.closeBtn 
    position absolute
    display flex
    justify-content center
    align-items center
    flex-direction column
    width 10%
    height 10%
    top 80%
    left 10%
    z-index 1000
    color white
    cursor pointer
    h2
        position relative
        display block
        width 100%
        &:before
            content ''
            position absolute
            display block
            top 50%
            width 0px
            height 2px
            background black
            transition all 0.5s
    &:hover
        h2
            position relative
            &:before
                width 100%
                transition all 0.5s

.close-arrow
    display flex
    justify-content center
    width 100%
    height 50px


.close-line1
    content ''
    position absolute
    display block
    width 20px
    height 1px
    left 12%
    transform rotate(45deg)
    background white
    top 60%

.close-line2
    content ''
    position absolute
    display block
    left 21%
    width 20px
    height 1px
    transform rotate(-45deg)
    background white
    top 60%
