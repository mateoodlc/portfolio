// WorkModuleComponent

@import "~styles/vars";

.WorkModuleComponent
    display block
    width 70%
    height 300px
    background red
    z-index 1
    box-shadow 0px 5px 10px 1px #c2c2c2
    transition background 0.4s linear, box-shadow 0.7s 
    &:hover
        transition background 0.4s linear, box-shadow 0.7s 
        background white
        box-shadow 0px 0px 0px 0px black