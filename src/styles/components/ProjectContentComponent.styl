// ProjectContentComponent

@import "~styles/vars";

.ProjectContentComponent
    display block
    position relative
    cursor default

.container
    display block
    position relative

.outside
    border-top-right-radius 20px
    border-bottom-right-radius 20px
    span
        position absolute
        left 50%
        top 50%
        color white
        letter-spacing 1.1em
        transform: translateX(-50%) translateY(-50%) rotate(-90deg)

.outside.light
    background white
    span
        color black


.section
    position absolute
    left 0
    display flex
    height 100vh
    transform rotate(-90deg)
    letter-spacing 50px
    text-align center

.project-description--container
    display flex
    position relative
    width 100%
    min-height 80vh
    justify-content center
    align-content center
    background black

.project-description
    display flex
    position relative
    width 80%
    flex-direction row
    justify-content center
    padding-top 10%
    color white

.project--general-description
    display flex
    position relative
    lost-column 6/12
    justify-content flex-start
    flex-direction column
    p
        width 80%

.project--detailed-description
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start
    lost-column 4/12
    p
        width 100%
    h2
        text-align left
        width 100%

.project--detailed-description-item
    padding 0
    margin 0

.project-design
    display flex
    position relative
    width 100%
    height 100vh
    justify-content center
    align-items center
    background black
    background-size cover
    background-repeat no-repeat

.project-research
    display flex
    position relative
    width 100%
    height 100vh
    justify-content center
    align-items center
    background white
    background-size 50%
    background-repeat no-repeat
    background-position center

.project-details
    display flex
    position relative
    width 100%
    height 100vh
    justify-content center
    align-items center
    background white
    padding 0
    lost-utility clearfix
    .project-details-video
        display flex
        width 66.66%
        height 100%
        background black
        border none
    .project-details-tools
        display flex
        width 33.33%
        height 100%
        background white
